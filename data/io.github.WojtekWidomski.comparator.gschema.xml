<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="comparator">
	<schema id="io.github.WojtekWidomski.comparator" path="/io/github/WojtekWidomski/comparator/">
	  <key name="servers" type="a(ss)">
	    <default>[]</default>
	    <summary>Servers</summary>
	    <description>Servers added to application</description>
	  </key>

	  <key name="window-width" type="i">
	    <default>600</default>
	    <summary>Window width</summary>
	  </key>

	  <key name="window-height" type="i">
	    <default>600</default>
	    <summary>Window height</summary>
	  </key>

	  <key name="remove-spaces" type="b">
      <default>true</default>
	    <summary>Remove unneeded spaces in servers descrpitions</summary>
	    <description>Some servers use spaces to move description text. This often looks bad in this application.</description>
	  </key>

	  <key name="dark-mode" type="b">
	    <default>false</default>
	    <summary>Dark mode</summary>
	    <description>Dark mode</description>
	  </key>
	</schema>
</schemalist>
