            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "tag" : "1.0.1"
                }
            ],
            "modules" : [
                {
                    "name" : "libsass",
                    "buildsystem" : "meson",
                    "cleanup" : [
                        "*"
                    ],
                    "sources" : [
                        {
                            "type" : "git",
                            "url" : "https://github.com/lazka/libsass.git",
                            "branch" : "meson"
                        }
                    ]
                },
                {
                    "name" : "sassc",
                    "buildsystem" : "meson",
                    "cleanup" : [
