{
    "app-id" : "io.github.WojtekWidomski.comparator",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "appstream-compose" : false,
    "sdk" : "org.gnome.Sdk",
    "command" : "comparator",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
